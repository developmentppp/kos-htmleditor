{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2017", "es2018.promise"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "kos-types": ["../../kos-types"]
    },
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"], // Ensure this is included

  },
  "include": [
    "src/**/*" // Ensure that the source files in the 'src' folder are included
  ],
  "exclude": [
    "dist", // Exclude the dist folder where compiled files are output
    "node_modules" // Exclude node_modules as usual
  ]
}
